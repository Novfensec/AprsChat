<ChatsCard>:
    style: "elevated"
    orientation: 'vertical'
    padding: [10, 10, 10, 10]
    spacing: 10
    adaptive_height: True
    theme_bg_color: 'Custom'
    md_bg_color: app.theme_cls.surfaceContainerHighColor
    on_press: 
        app.current_chatuser = self.chatusername
        app.referrer("chat screen")

    FitImage:
        source: "assets/images/basic/user_avatar128.png"
        size_hint: 1, None
        height: self.width * 3/4
        radius: root.radius

    MDLabel:
        text: root.chatusername
        font_style: "Title"
        role: 'medium'
        adaptive_height: True
